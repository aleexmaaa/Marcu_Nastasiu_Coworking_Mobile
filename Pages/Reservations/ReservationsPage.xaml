<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcu_Nastasiu_Coworking_Mobile.Pages.ReservationsPage"
             Title="Reservations">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Button Text="Add Reservation" Clicked="OnAddClicked"/>

        <CollectionView x:Name="ReservationsView" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                        <Label Text="{Binding Title}" FontAttributes="Bold" Grid.ColumnSpan="2"/>

                        <Label Text="{Binding StartTime, StringFormat='Start: {0:dd MMM yyyy HH:mm}'}"
                               Grid.Row="1" Opacity="0.8" Grid.ColumnSpan="2"/>

                        <Label Text="{Binding EndTime, StringFormat='End: {0:dd MMM yyyy HH:mm}'}"
                               Grid.Row="2" Opacity="0.8" Grid.ColumnSpan="2"/>

                        <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8" HorizontalOptions="End">
                            <Button Text="Edit" Clicked="OnEditClicked" Padding="10,4"/>
                            <Button Text="Delete" Clicked="OnDeleteClicked" Padding="10,4"/>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
