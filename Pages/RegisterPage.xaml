<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcu_Nastasiu_Coworking_Mobile.Pages.RegisterPage"
             Title="Register">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">

            <Label Text="Create account" FontSize="24" />
            <Label Text="The first registered user becomes Admin." FontSize="14" Opacity="0.7"/>

            <Entry x:Name="FullNameEntry" Placeholder="Full name" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password (min 6 chars)" IsPassword="True" />
            <Entry x:Name="ConfirmEntry" Placeholder="Confirm password" IsPassword="True" />

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

            <Button Text="Register" Clicked="OnRegisterClicked" />
            <Button Text="I already have an account" Clicked="OnGoToLoginClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
