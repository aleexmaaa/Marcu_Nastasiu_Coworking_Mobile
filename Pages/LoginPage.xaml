<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcu_Nastasiu_Coworking_Mobile.Pages.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="24" Spacing="12" VerticalOptions="Center">

        <Label Text="Sign in" FontSize="24" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Create new account" Clicked="OnGoToRegisterClicked" />

    </VerticalStackLayout>
</ContentPage>
